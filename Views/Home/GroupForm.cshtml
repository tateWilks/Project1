@{
    ViewBag.Title = "Sign Up";
}

@*need to finish set up in homecontroller*@
@*Add in asp-for*@

@model Project1.Models.SignUpModel

<body>
    <div>
        <h2>Enter Group Info</h2>
        <br />

        <form asp-action="GroupForm" method="post">
            <div>
                <label @*asp-for="groupName"*@>Name of Group:</label>
                <input id="groupName" @*asp-for="groupName"*@ />
                <br />

                <label @*asp-for="groupSize"*@>Size of Group:</label>
                <input id="groupSize" @*asp-for="groupSize"*@ />
                <br />

                <label @*asp-for="Email"*@>Email Address:</label>
                <input id="Email" @*asp-for="Email"*@ />
                <br />

                <label @*asp-for="Phone"*@>Phone Number:</label>
                <input id="Phone" @*asp-for="Phone"*@ />
                <br />
            </div>
            <br />

            <input type="submit" value="Submit Group" id="submitGroupButton" />
            <div asp-validation-summary="All"></div>
        </form>
    </div>
</body>